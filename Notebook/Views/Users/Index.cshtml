@model IEnumerable<Notebook.Models.User>

@{
    ViewData["Title"] = "Notatnik użytkowników";
}

<div class="container mt-4">
    <h1 class="mb-4">Notatnik użytkowników</h1>

    <p>
        <a asp-action="Create" class="btn btn-success btn-lg">
            Dodaj użytkownika
        </a>
    </p>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            Brak zapisanych użytkowników. Kliknij „Dodaj użytkownika”, aby zacząć.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Imię</th>
                        <th>Nazwisko</th>
                        <th>Data urodzenia</th>
                        <th>Wiek</th>
                        <th>Płeć</th>
                        <th>Dodatkowe atrybuty</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        var age = DateTime.Today.Year - user.DateOfBirth.Year;
                        if (user.DateOfBirth.Date > DateTime.Today.AddYears(-age)) age--;

                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.DateOfBirth:dd.MM.yyyy</td>
                            <td>@age</td>
                            <td>@(user.Gender == Gender.Male ? "Mężczyzna" : "Kobieta")</td>
                            <td>
                                @if (user.Attributes.Any())
                                {
                                    <ul class="mb-0">
                                        @foreach (var attr in user.Attributes)
                                        {
                                            <li><strong>@attr.Key:</strong> @attr.Value</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <em>brak</em>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edytuj</a>
                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger" 
                                   onclick="return confirm('Na pewno usunąć?')">Usuń</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>